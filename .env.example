# Переменные окружения приложения

# --- Supabase / PostgreSQL ---
SUPABASE_URL=https://example.supabase.co
SUPABASE_KEY=your-supabase-key
SUPABASE_SERVICE_KEY=your-supabase-service-key
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/assistant

# --- Redis / Upstash ---
UPSTASH_REDIS_URL=redis://default:password@redis:6379/0

# --- LLM провайдеры ---
LLM_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# --- Интеграция Avito ---
AVITO_CLIENT_ID=your-avito-client-id
AVITO_CLIENT_SECRET=your-avito-client-secret
AVITO_USER_ID=your-avito-user-id

# --- Telegram ---
TELEGRAM_BOT_TOKEN=your-telegram-token
TELEGRAM_WEBHOOK_URL=https://example.com/telegram/webhook

# --- CRM и календарь ---
AMOCRM_DOMAIN=example.amocrm.ru
AMOCRM_ACCESS_TOKEN=your-amocrm-token
GOOGLE_CALENDAR_CREDENTIALS=/var/secrets/google_calendar.json

# --- Платежи ---
YOOKASSA_SHOP_ID=your-yookassa-shop-id
YOOKASSA_SECRET_KEY=your-yookassa-secret

# --- Безопасность и логирование ---
JWT_SECRET_KEY=super-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
ENVIRONMENT=development
LOG_LEVEL=INFO
SENTRY_DSN=

# --- Путь хранения документов ---
DOCUMENTS_PATH=/var/data/documents

# --- Настройки приложения ---
RATE_LIMIT_PER_MINUTE=60
SESSION_TTL_DAYS=30
MAX_CONCURRENT_USERS=100
